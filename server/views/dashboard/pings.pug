extends ../layout

append head
  title #{project} Pings - Constellation

block content
  .row: .col-xs-12
    a#back(href=`/dashboard/${project}/m/${milestone}`) all #{project} collaborations
    h2 #{project} #[span.glyphicon.glyphicon-flag.text-success]
      br
      small #[span.label.label-primary= milestone] checkoffs
  
  #pings.row
  
  template#collab
    .collab.ping.col-xs-12: .tile.panel.panel-default: .panel-body
      .row
        .col-xs-6
          h4: a(href='#').users
        .score.col-xs-6.text-right.invisible
            .btn-group(data-toggle='buttons')
              label.btn.btn-link
                input(type='radio' name='score')
                | &nbsp;#[span.glyphicon.glyphicon-minus]&nbsp;
              label.btn.btn-link
                input(type='radio' name='score')
                | &nbsp;#[span.glyphicon.glyphicon-ok]&nbsp;
              label.btn.btn-link
                input(type='radio' name='score')
                | &nbsp;#[span.glyphicon.glyphicon-ok]+
            .grader &nbsp;
  
  script.
    var shareURL = !{JSON.stringify(shareURL)};
    var project = !{JSON.stringify(project)};
    var milestone = !{JSON.stringify(milestone)};
  script(src='/public/sharedb.js')
  script(src='/public/moment.js')
  script(src='/static/dashboard/pings.js')
